<div id="header" data-role="header" data-position="fixed">
	<%= link_to 'Back', "#", "data-icon" => "arrow-l", "class" => "ui-btn-left", "data-rel" => "back" %>
	<h1>Registration</h1>
</div>

<div data-role="content">
	<ul>
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>
		
		  <li><div id="email_section">
		  	<%= f.label :email %>
		  	<%= f.email_field :email %>
		  	</div></li>
		
		  <li><div id="password_section">
		  	<%= f.label :password %>
		  	<%= f.password_field :password %>
		  	</div></li>
		
		  <li><div id="password_confirmation_section"
		  	<%= f.label :password_confirmation %>
		  	<%= f.password_field :password_confirmation %>
		  	</div></li>
		
		  <li><div><%= f.submit "Register" %></div></li>
		<% end %>
	</ul>
</div>
